<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="82dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".map.GoogleMaps" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="70dp"
        android:layout_height="136dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:id="@+id/busRouteButton"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/map_button_busroutes"
            android:contentDescription="@string/busmapbutton"
            android:elevation="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/gMapsButton"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/map_button_gmaps"
            android:contentDescription="@string/gmapbutton"
            android:elevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <SearchView
        android:id="@+id/sv_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="16dp"
        android:elevation="5dp"
        android:iconifiedByDefault="false"
        android:queryHint="Search..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/ve"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="508dp"
        android:background="@android:drawable/screen_background_light"
        android:text="  Room Name: "
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="  Floor: "
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/ve"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ve"
        app:layout_constraintTop_toTopOf="@+id/ve" />

    <TextView
        android:id="@+id/roomNameHere"
        android:layout_width="318dp"
        android:layout_height="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/ve"
        app:layout_constraintEnd_toEndOf="@+id/ve"
        app:layout_constraintHorizontal_bias="0.903"
        app:layout_constraintStart_toStartOf="@+id/ve"
        app:layout_constraintTop_toTopOf="@+id/ve"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/floorNumHere"
        android:layout_width="147dp"
        android:layout_height="19dp"
        android:layout_marginEnd="204dp"
        android:layout_marginRight="204dp"
        app:layout_constraintBottom_toBottomOf="@+id/ve"
        app:layout_constraintEnd_toEndOf="@+id/ve"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toEndOf="@+id/floor"
        app:layout_constraintTop_toTopOf="@+id/ve"
        app:layout_constraintVertical_bias="0.777" />

    <include
        android:id="@+id/include3"
        layout="@layout/bottom_bar_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>


