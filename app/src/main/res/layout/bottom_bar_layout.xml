<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="@drawable/main_bottom_rect"
        android:elevation="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="82dp"
        android:elevation="23dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/foodBtn"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_weight="1"
            android:contentDescription="@string/foodBtn"
            android:src="@drawable/food_grey_button" />

        <ImageButton
            android:id="@+id/studyBtn"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_weight="1"
            android:contentDescription="@string/foodBtn"
            android:src="@drawable/study_grey_button" />

        <ImageButton
            android:id="@+id/homeBtn"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_weight="1"
            android:contentDescription="@string/homeBtn"
            android:src="@drawable/home_grey_button" />

        <ImageButton
            android:id="@+id/busBtn"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_weight="1"
            android:contentDescription="@string/foodBtn"
            android:src="@drawable/bus_grey_button" />

        <ImageButton
            android:id="@+id/mapBtn"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_weight="1"
            android:contentDescription="@string/foodBtn"
            android:src="@drawable/map_grey_button" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>