<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:layout_height="380dp"
    android:layout_gravity="center">


    <TextView
        android:id="@+id/studySpotName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="25dp"
        android:paddingLeft="25dp"
        android:paddingEnd="25dp"
        android:paddingRight="25dp"
        android:text="@string/studySpotName"
        android:textSize="18sp"
        android:fontFamily="@font/montserrat_medium"
        android:textAllCaps="true"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/studySpotLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:paddingBottom="5dp"
        android:text="@string/studySpotLocation"
        android:textSize="15sp"
        android:fontFamily="@font/lato_light"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/studySpotName" />

    <TextView
        android:id="@+id/studySpotSeats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:paddingBottom="5dp"
        android:text="@string/studySpotSeat"
        android:textSize="15sp"
        android:fontFamily="@font/lato_light"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/studySpotLocation" />

    <TextView
        android:id="@+id/studySpotBus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:paddingBottom="5dp"
        android:text="@string/studySpotBus"
        android:textSize="15sp"
        android:fontFamily="@font/lato_light"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/studySpotSeats" />

    <TextView
        android:id="@+id/studySpotHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:paddingBottom="5dp"
        android:text="@string/studySpotHours"
        android:textSize="15sp"
        android:fontFamily="@font/lato_light"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/studySpotBus" />

    <TextView
        android:id="@+id/studySpotPhotos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:text="@string/studySpotPhotos"
        android:textSize="15sp"
        android:fontFamily="@font/montserrat_medium"
        android:textAllCaps="true"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/studySpotHours" />

    <ListView
        android:id="@+id/studySpotPhotosListView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="15dp"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/studySpotPhotos">

    </ListView>

    <ImageButton
        android:id="@+id/studySpotCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="30dp"
        android:background="@color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cross"/>

</androidx.constraintlayout.widget.ConstraintLayout>